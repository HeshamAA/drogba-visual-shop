{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "order_products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-product.order-product"
    },
    "customer_name": {
      "type": "string",
      "required": true
    },
    "customer_phone": {
      "type": "biginteger",
      "required": true
    },
    "address": {
      "type": "text",
      "required": true
    },
    "total_price": {
      "type": "decimal"
    },
    "order_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "completed",
        "cancelled"
      ]
    },
    "payment_method": {
      "type": "enumeration",
      "required": true,
      "default": "vodafone cash",
      "enum": [
        "cash",
        "vodafone cash",
        "instapay"
      ]
    }
  }
}
