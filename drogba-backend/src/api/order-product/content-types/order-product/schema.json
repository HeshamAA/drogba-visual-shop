{
  "kind": "collectionType",
  "collectionName": "order_products",
  "info": {
    "singularName": "order-product",
    "pluralName": "order-products",
    "displayName": "OrderProduct"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "product": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::product.product"
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "order_products"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "required": true
    },
    "size": {
      "type": "json",
      "required": true
    }
  }
}
